    .side-right.side-right-s
      form(class='vacancies-form' enctype='multipart/form-data')
        .form-notice Отправьте ваши данные и укажите интерисующую вас вакансию, мы свяжемся с вами
        hr
        .form-header Заполните форму

        +input('ФИО')

        +input('Номер телефона')

        +input('E-mail')

        +select({1: 'Программист', 2: 'Водитель', 3: 'Менеджер-проекта'}, 'Укажите вакансию')

        +file('Загрузить резюме', '', 'application/pdf, application/rtf, application/msword', 'Файлы pdf, rtf, doc')

        +submit-button('Отправить')

    .clear

include includes/footer